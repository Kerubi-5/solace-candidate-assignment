{
  "name": "solace-candidate-assignment",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "generate": "drizzle-kit generate",
    "migrate:up": "node ./src/db/migrate.js",
